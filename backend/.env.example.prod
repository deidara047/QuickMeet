# Variables de entorno - PRODUCTION
# Valores sensibles - NUNCA commitear valores reales
# Usar secrets de GitHub/Azure para estos en CI/CD

# ====================================
# Database
# ====================================
# Migraciones: usuario con privilegios DDL
ConnectionStrings__Migration=Server=tcp:quickmeet-prod.database.windows.net,1433;Initial Catalog=QuickMeet;Persist Security Info=False;User ID=SET_IN_GITHUB_SECRETS_MIGRATION_USER;Password=SET_IN_GITHUB_SECRETS_MIGRATION_PASS;MultipleActiveResultSets=False;Encrypt=True;TrustServerCertificate=False;Connection Timeout=30;

# Aplicacion: usuario con permisos minimos (INSERT, UPDATE, DELETE, SELECT)
ConnectionStrings__DefaultConnection=Server=tcp:quickmeet-prod.database.windows.net,1433;Initial Catalog=QuickMeet;Persist Security Info=False;User ID=quickmeet_app;Password=SET_IN_GITHUB_SECRETS_APP_PASS;MultipleActiveResultSets=False;Encrypt=True;TrustServerCertificate=False;Connection Timeout=30;

# ====================================
# ASP.NET Core
# ====================================
ASPNETCORE_ENVIRONMENT=Production
ASPNETCORE_URLS=http://+:8080

# ====================================
# JWT / Autenticación
# ====================================
# Minimo 64 caracteres, super secreto
JWT_Secret=SET_IN_GITHUB_SECRETS_PROD_MIN_64_CHARS_VERY_SECURE_STRING_HERE
JWT_ExpiryMinutes=1440

JWT_Issuer=quickmeet-api
JWT_Audience=quickmeet-client

# ====================================
# Email (SendGrid)
# ====================================
SendGrid_ApiKey=SET_IN_GITHUB_SECRETS
SendGrid_FromEmail=hello@quickmeet.app
SendGrid_FromName=QuickMeet

# ====================================
# CORS
# ====================================
CORS_AllowedOrigins=https://quickmeet.app,https://www.quickmeet.app

# ====================================
# Logging
# ====================================
# Solo errores en producción
Logging__LogLevel__Default=Warning
Logging__LogLevel__Microsoft=Error
Logging__LogLevel__Microsoft.AspNetCore=Error

# ====================================
# Cloud Storage (Azure Blob, AWS S3, etc)
# ====================================
AWS_AccessKeyId=SET_IN_GITHUB_SECRETS
AWS_SecretAccessKey=SET_IN_GITHUB_SECRETS
AWS_S3_Bucket=quickmeet-prod

# ====================================
# Security
# ====================================
# Rate limiting estricto en producción
RateLimiting__RequestsPerMinute=100

# HTTPS only
RequireHttps=true

# ====================================
# Observability
# ====================================
# Para Application Insights, DataDog, etc
ApplicationInsights__InstrumentationKey=SET_IN_GITHUB_SECRETS

# ====================================
# Feature Flags
# ====================================
ENABLE_SWAGGER=false
ENABLE_DEBUG_ENDPOINTS=false
