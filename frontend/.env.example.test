# Variables de entorno - Frontend TESTING
# Usado en CI/CD para tests E2E

# ====================================
# API Configuration
# ====================================
NG_APP_API_URL=http://api:8080
NG_APP_API_TIMEOUT=30000

# ====================================
# Environment
# ====================================
NG_APP_ENVIRONMENT=testing
NG_APP_LOG_LEVEL=debug

# ====================================
# Features
# ====================================
NG_APP_ENABLE_MOCK_API=false
NG_APP_ENABLE_DEBUG_PANEL=true

# ====================================
# Auth
# ====================================
NG_APP_SESSION_TIMEOUT_MINUTES=60

# ====================================
# Testing
# ====================================
NG_APP_SKIP_LOGIN_VALIDATION=true
NG_APP_USE_TEST_DATA=true
