# Variables de entorno - Frontend DEVELOPMENT
# Copiar a .env para desarrollo local

# ====================================
# API Configuration
# ====================================
NG_APP_API_URL=http://localhost:5000
NG_APP_API_TIMEOUT=30000

# ====================================
# Environment
# ====================================
NG_APP_ENVIRONMENT=development
NG_APP_LOG_LEVEL=debug

# ====================================
# Features
# ====================================
NG_APP_ENABLE_MOCK_API=false
NG_APP_ENABLE_DEBUG_PANEL=true

# ====================================
# Auth
# ====================================
NG_APP_SESSION_TIMEOUT_MINUTES=60

# ====================================
# Analytics (opcional)
# ====================================
NG_APP_GOOGLE_ANALYTICS_ID=
NG_APP_SENTRY_DSN=

# ====================================
# Feature Flags
# ====================================
NG_APP_ENABLE_BETA_FEATURES=true
